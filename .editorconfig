root = true

[*]
charset = utf-8
end_of_line = LF
indent_style = space
indent_size = 4
max_line_length = 100

# Configures [`shfmt`](https://github.com/mvdan/sh).
[*.sh]
indent_style = space
indent_size = 4
space_redirects = true
switch_case_indent = true
binary_next_line = true

# 72-column Git commit messages, as is typical.
[.git/COMMIT_EDITMSG]
max_line_length = 72

[**.{md,typ}]
# Unlimited line lengths for use with Semantic Line Breaks.
#
# <https://sembr.org/>
max_line_length = unset
